{{>header}}
<!-- Details -->
<div class="container details">
    <div class="details-content">
        <h2>{{product.title}}</h2>
        <strong>{{product.category}}</strong>
        <p>{{product.content}}</p>
        <div class="buttons">
            {{#if owner}}
            <a href="#/product/remove/{{product.id}}" class="btn delete">Delete</a>
            <a href="#/product/edit/{{product.id}}" class="btn edit">Edit</a>
            {{/if}}
            <a href="#/" class="btn edit">Back</a>            
        </div>
    </div>
</div>
{{>footer}}